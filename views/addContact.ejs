<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="mt-4 mb-4">Tambah Data Contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            required
            name="nama"
          />
        </div>
        <div class="mb-3">
          <label for="noHP" class="form-label">Nomor HP</label>
          <input
            type="text"
            class="form-control"
            id="noHP"
            required
            name="noHP"
          />
        </div>
        <button type="submit" class="btn btn-primary">Tambah Contact</button>
      </form>
    </div>
  </div>
</div>
